{
  "name": "emergency-guardian-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end integration tests for Emergency Guardian system",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "install-browsers": "playwright install",
    "docker:up": "docker-compose -f ../docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f ../docker-compose.dev.yml down",
    "test:full": "npm run docker:up && sleep 30 && npm run test && npm run docker:down"
  },
  "keywords": [
    "e2e",
    "integration",
    "playwright",
    "emergency-guardian",
    "web3",
    "blockchain"
  ],
  "author": "Emergency Guardian Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "ethers": "^6.8.0",
    "axios": "^1.6.0",
    "ws": "^8.14.0"
  }
}
